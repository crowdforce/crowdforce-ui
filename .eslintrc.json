{
  "extends": "next/core-web-vitals",
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "no-console": "warn",
    "no-alert": "error",
    "no-debugger": "error",
    "no-var": "error",
    "no-unused-vars": "error",
    "eol-last": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "semi": [
      "warn",
      "never"
    ]
  }
}
